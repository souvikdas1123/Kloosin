<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        layout="@layout/users_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_package1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="2dp"
                android:layout_marginTop="20dp"
                android:elevation="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/image"
                            android:paddingStart="5dp"/>

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:text="Shalini Chopra"
                            android:layout_toEndOf="@+id/user_image"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hellow dow you remember me"
                            android:layout_toRightOf="@+id/user_image"
                            android:layout_marginStart="10dp"
                            android:layout_below="@+id/user_name"/>

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_package2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="2dp"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/card_package1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_image1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/image"
                            android:paddingStart="5dp"/>

                        <TextView
                            android:id="@+id/user_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:text="Charn das haldar"
                            android:layout_toEndOf="@+id/user_image1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hellow dow you remember me"
                            android:layout_toRightOf="@+id/user_image1"
                            android:layout_marginStart="10dp"
                            android:layout_below="@+id/user_name1"/>

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_package3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="2dp"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/card_package2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_image2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/image"
                            android:paddingStart="5dp"/>

                        <TextView
                            android:id="@+id/user_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:text="Shalini Chopra"
                            android:layout_toEndOf="@+id/user_image2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hellow dow you remember me"
                            android:layout_toRightOf="@+id/user_image2"
                            android:layout_marginStart="10dp"
                            android:layout_below="@+id/user_name2"/>

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_package4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="2dp"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/card_package3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_image3"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/image"
                            android:paddingStart="5dp"/>

                        <TextView
                            android:id="@+id/user_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            android:text="Shalini Chopra"
                            android:layout_toEndOf="@+id/user_image3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hellow dow you remember me"
                            android:layout_toRightOf="@+id/user_image3"
                            android:layout_marginStart="10dp"
                            android:layout_below="@+id/user_name3"/>


                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
