<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlTopPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/topPanel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/profile_arch" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/profile_img" />

                        <com.kloosin.kview.KLTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Shane Watson"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:orientation="vertical">

                        <com.kloosin.kview.KLTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="works at xyz company"
                            android:textSize="10sp"
                            android:layout_gravity="center_horizontal"
                            android:textAllCaps="true"
                            android:textColor="#595959" />
                        <com.kloosin.kview.KLTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="studied at abc institute, kolkata"
                            android:textSize="10sp"
                            android:layout_gravity="center_horizontal"
                            android:textAllCaps="true"
                            android:textColor="#595959" />
                        <com.kloosin.kview.KLTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="lives in kolkata"
                            android:textSize="10sp"
                            android:layout_gravity="center_horizontal"
                            android:textAllCaps="true"
                            android:textColor="#595959" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topPanel"
                    android:orientation="vertical">

                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/gray"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:progressTint="@color/black"
                        android:rating="5"
                        android:secondaryProgressTint="@color/black"
                        android:stepSize="0.5"
                        android:theme="@style/RatingBar"
                        android:visibility="gone"/>


                    <com.kloosin.kview.KLTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="short description goes here"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:visibility="gone"/>

                    <com.kloosin.kview.KLTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Location : Kolkata"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/margin_padding_medium"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/blue_btn_background"
                            android:layout_marginRight="4dp">
                            <com.kloosin.kview.KLTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/white"
                                android:textAllCaps="true"
                                android:text="add friend"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/golden_bg"
                            android:layout_marginRight="4dp"
                            android:layout_marginLeft="4dp">
                            <com.kloosin.kview.KLTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/black"
                                android:textAllCaps="true"
                                android:text="message"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/blue_btn_background"
                            android:layout_marginLeft="4dp">
                            <com.kloosin.kview.KLTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/white"
                                android:textAllCaps="true"
                                android:text="more"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <com.kloosin.kview.KLTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_exp_left_txtview"
                            android:textColor="#595959"
                            android:gravity="center"
                            android:paddingBottom="@dimen/margin_padding_medium"
                            android:paddingTop="@dimen/margin_padding_medium"
                            android:text="POSTS"
                            android:textAllCaps="true" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_exp_left_txtview">
                            <com.kloosin.kview.KLTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:paddingBottom="@dimen/margin_padding_medium"
                                android:paddingTop="@dimen/margin_padding_medium"
                                android:text="friends"
                                android:textColor="#595959"
                                android:textAllCaps="true" />
                            <com.kloosin.kview.KLTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="999"
                                android:textColor="#f73434"
                                android:layout_gravity="right"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="2dp"/>
                        </FrameLayout>

                        <com.kloosin.kview.KLTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_exp_left_txtview"
                            android:textColor="#595959"
                            android:gravity="center"
                            android:paddingBottom="@dimen/margin_padding_medium"
                            android:paddingTop="@dimen/margin_padding_medium"
                            android:text="MEDIA"
                            android:textAllCaps="true" />

                        <com.kloosin.kview.KLTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_exp_left_right_txtview"
                            android:textColor="#595959"
                            android:gravity="center"
                            android:paddingBottom="@dimen/margin_padding_medium"
                            android:paddingTop="@dimen/margin_padding_medium"
                            android:text="ABOUT"
                            android:textAllCaps="true" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/feed_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rlTopPart"
                android:layout_marginBottom="@dimen/margin_padding_medium"
                android:layout_marginTop="@dimen/margin_padding_medium">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>