<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/_single_contact_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_padding_large">

    <ImageView
        android:id="@+id/contact_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/contact_icon" />

    <LinearLayout
        android:id="@+id/contact_name_number_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_padding_medium"
        android:layout_marginRight="@dimen/margin_padding_medium"
        android:layout_toLeftOf="@+id/contact_check"
        android:layout_toRightOf="@+id/contact_profile_picture"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.kloosin.kview.KLTextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Andrew Mathews"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.kloosin.kview.KLTextView
            android:id="@+id/contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9999995512"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/contact_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/checkbox_background" />
</RelativeLayout>