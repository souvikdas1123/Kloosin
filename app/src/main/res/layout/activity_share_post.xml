<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootviewlayot"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/root_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_share1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="5dp"
                card_view:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/image"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salini Chopra"
                        android:layout_toEndOf="@+id/profile_image"
                        android:layout_marginBottom="10dp"
                        android:paddingStart="5dp"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="public"
                        android:gravity="center_horizontal"
                        android:background="@drawable/circullar_shape"
                        android:textColor="@android:color/black"
                        android:drawableEnd="@drawable/down_arraow"
                        android:padding="4dp"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="12dp"
                        android:layout_alignParentEnd="true"/>

                    <RelativeLayout
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/profile_image">
                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/card_share1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
                        android:layout_width="400dp"
                        android:layout_height="match_parent"
                        android:id="@+id/emojiconedit_text"
                        android:textColorHint="#000000"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:hint="Write a post..."
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:layout_margin="16dp"
                        android:background="@null">

                    </hani.momanii.supernova_emoji_library.Helper.EmojiconEditText>


                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/root_view"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="1dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/emoji_logo"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.1"
                android:layout_gravity="center"
                android:src="@drawable/st"/>

            <ImageView
                android:id="@+id/camera"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_camera"/>

            <ImageView
                android:id="@+id/attachImage"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/at"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textColorHint="#CFD8DC"
                android:textColor="#000"
                android:background="@null"
                android:visibility="invisible"
                android:hint="Write a message..."
                android:id="@+id/messageArea"
                android:maxHeight="80dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="3.5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/postSubmitButton"
                    android:layout_height="wrap_content"
                    android:src="@drawable/post_icon"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/showImage"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="138dp"
        />

</RelativeLayout>
